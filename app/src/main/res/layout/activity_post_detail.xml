<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/menu_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#673AB7"
            android:elevation="4dp">

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/tvRecommendedForYou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Details"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="16dp"
            android:src="@drawable/travel_2"/>

        <!-- Availability Tag -->
        <TextView
            android:id="@+id/post_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp"
            android:text="Category"
            android:textSize="12sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/post_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="18sp"
            android:text="post_address"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/post_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="post_description"
            android:textSize="16sp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Author email: "
                    android:padding="8dp"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/author_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:textSize="16sp"/>
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/follow_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Follow User"
            android:layout_gravity="end"
            android:padding="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"/>
        <Button
            android:id="@+id/unfollow_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UnFollow User"
            android:layout_gravity="end"
            android:padding="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"/>
        <Button
            android:id="@+id/return_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go Back"
            android:layout_gravity="end"
            android:padding="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</ScrollView>
